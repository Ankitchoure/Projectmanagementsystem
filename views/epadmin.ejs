<% include adminheader %>




            <!-- About Start -->
            <div class="about wow fadeInUp" data-wow-delay="0.1s">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-lg-12 col-md-12">
                            <div class="section-header text-left">
                                <h1>Edit Profile Here</h1>
                                <font color="blue"><%= output %></font>
                                <form method="post" action="/admin/epadmin">
                                    <div class="form-group">
                                        <label>Name</label><br>
                                        <input type="text" class="form-control" id="exampleInputName" aria-describedby="emailHelp" name="Name" value="<%= userDetails.Name%>" ><br>
                                      <label for="exampleInputusername">Username</label>
                                      <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email" value="<%= userDetails.email%>" readonly>
                                      <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                                    </div>
                                    <div class="form-group">
                                      <label for="exampleInputPassword1">Mobile number</label>
                                      <input type="text" class="form-control" id="exampleInputPassword1" name="mobile" value="<%= userDetails.mobile%>">
                                    </div>
                                    <div class="form-group">
                                    <label>Address</label>
                                    <textarea row="5" class="form-control" id="exampleInputPassword1" name="address" ><%= userDetails.address%></textarea>
                                  </div>
                                 <div class="form-group">
                                    <label>City</label>
                                    <select class="form-control" id="exampleInputPassword1" name="city">
                                    <option><%= userDetails.city%></option>
                                    <option>Bhopal</option>
                                    <option>Indore</option>
                                    <option>Ujjain</option>
                                  </select>
                               </div>
                                    <div class="form-group form-check">
                                  <label>Gender</label>
                                  Male <input type ="radio" name = "gender" value="male" <%= m %> />
                                  &nbsp;&nbsp;
                                  Female <input type ="radio" name = "gender" value="female" <%= f %> />
                                    </div>
                                    <button type="submit" class="btn btn-success">Submit</button>
                                  </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- About End -->

        <% include adminfooter %>